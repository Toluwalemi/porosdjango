global:
  smtp_smarthost: "mailpit:1025"
  smtp_from: "alertmanager@{{ project_name }}.local"
  smtp_require_tls: false

route:
  receiver: "email"
  group_by: ["alertname", "severity"]
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h

receivers:
  - name: "email"
    email_configs:
      - to: "alerts@{{ project_name }}.local"
        send_resolved: true
